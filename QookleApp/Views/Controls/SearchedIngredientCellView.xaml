<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
x:Class="QookleApp.Views.Controls.SearchedIngredientCellView"
Padding="2">
	<ContentView.Content>
	<Grid BackgroundColor="#7D007D">
		<StackLayout Orientation="Horizontal" x:Name="TapLabel">

		<StackLayout Padding="5,5,5,5">
			<Image Source="Star.png" HeightRequest="20"/>
		</StackLayout>

			<StackLayout BackgroundColor="#7D007D" Padding="0, 3, 12, 3" VerticalOptions="Center">
				<Label Text="{Binding}" TextColor="White"/>
			</StackLayout>
			
		</StackLayout>
	</Grid>
	</ContentView.Content>
</ContentView>
